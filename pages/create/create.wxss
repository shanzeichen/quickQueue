/* pages/create/create.wxss */
.section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50rpx 100rpx 50rpx 100rpx;
  font-size: 1rem;
}
.ItemInfo {
  width: 100%;
}
.item_input {
  border-bottom: rgb(78, 185, 46) solid 2rpx;
  padding-left: 5rpx;
}
.item_child {
  display: block;
  margin: 30rpx 0;
}
.num_limit {
  width: 100rpx;
  display: inline-block;
  margin-left: 50rpx;
  border-bottom: rgb(78, 185, 46) solid 2rpx;
  text-align: right;
  padding-right: 10rpx;
}
#tips {
  display: block;
  color: rgb(190, 190, 190);
  font-size: 0.8rem;
}
#item_intro {
  width: 100%;
  height: 300rpx;
  border: rgb(78, 185, 46) solid 2rpx;
}
label {
  margin-right: 100rpx;
}
button {
  width: 100%;
  margin-top: 80rpx;
}

#qr{
  width:200px;
  height: 200px;
  border: 1px solid black;
}