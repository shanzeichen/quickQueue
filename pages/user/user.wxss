/* pages/user/user.wxss */
.userinfo {
  height: 250rpx;
  width: 100%;
  background-color: #4abdcc;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.list {
  margin-top: 50rpx;
  width: 100%;
  border-top: 1rpx solid #ccc;
}

.list-item {
  padding-left: 50rpx;
  border-bottom: 1rpx solid #ccc;
  height: 80rpx;
  line-height: 80rpx;
}